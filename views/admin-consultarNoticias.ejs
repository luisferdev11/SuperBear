<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="assets/svg/logo.svg">
    <link rel="stylesheet" href="css/mastersyleNuevo.css">
    <link rel="stylesheet" href="css/admin-productos.css">
    <title>Consultar Noticias | SuperBear</title>

    <!-- favicon -->
    <link rel="icon" type="image/png" href="/assets/svg/logo.svg" sizes="32x32">

    <!-- CSS Libraries-->
    <!-- bootstrap v4.6.0 -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <!--
        theiconof v3.0
        https://www.theiconof.com/search
     -->
    <link rel="stylesheet" href="/assets/css/icons.css">
    <!-- Remix Icon -->
    <link rel="stylesheet" href="/assets/css/remixicon.css">
    <!-- Swiper 6.4.11 -->
    <link rel="stylesheet" href="/assets/css/swiper-bundle.min.css">
    <!-- Owl Carousel v2.3.4 -->
    <link rel="stylesheet" href="/assets/css/owl.carousel.min.css">
    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="/assets/css/main.css">
    <!-- normalize.css v8.0.1 -->
    <link rel="stylesheet" href="/assets/css/normalize.css">
</head>
<body>
    <!--Cada grupo debe tener su propio menu
    para eso es necesario que cada input tenga un id diferentes
    los for del label deben coincidir con el del input-->
    <!-- <%- include('partials/navegacionAdmin') %> -->
    <div class="principal">
        <header>
            <h1>Noticias</h1>
            <a href="/crearNoticia">
                <img src="assets/svg/plus.svg">
            </a>
        </header>
    </div>
    <div class="grid">
        <% noticias.forEach(element => { %>
        <div class="producto-predeterminado">
            <p>
                <b><%= element.tit_not %></b>
                <br><br>
                <%= element.cont_not %>
            </p>
            <label for="menu-<%= element.idDNoticias %>">
                <img class="opciones" src="assets/svg/options.svg">
                <input id="menu-<%= element.idDNoticias %>" type="checkbox">
                <div class="desplegable">
                    <a href="/editarNoticia/<%= element.idDNoticias %>" class="b">
                        Editar Noticia
                    </a>
                    <a href="/borrarNoticia/<%= element.idDNoticias %>" class="b">
                        Borrar Noticia
                    </a>
                </div>
            </label>
        </div>
        <% }); %>
    </div>

    <footer class="em_main_footer with__text p-0">
        <div id="footerNuevo" class="em_body_navigation -active-links">
            <div class="col-4 item_link">
                <a href="/check-default-products" class="btn btn_navLink">
                    <div class="icon_current">
                        <img src="/assets/svg/user.svg" id="Iconly_Two-tone_Discovery" data-name="Iconly/Two-tone/Discovery" width="24" height="24" viewBox="0 0 24 24">
                    </div>
                    <div class="icon_active">
                        <img src="/assets/svg/user-active.svg" id="Iconly_Bulk_Discovery" data-name="Iconly/Bulk/Discovery" width="24" height="24" viewBox="0 0 24 24">

                    </div>
                    <div class="txt__tile">Productos</div>
                </a>
            </div>
            <div class="col-4 item_link">
                <a href="/admin-index" class="btn btn_navLink">
                    <div class="icon_current">
                        <img src="/assets/svg/grupos.svg" id="Iconly_Two-tone_Folder" data-name="Iconly/Two-tone/Folder" width="24" height="24" viewBox="0 0 24 24">
                    </div>
                    <div class="icon_active">
                        <img src="/assets/svg/grupos-active.svg" id="Iconly_Bulk_Folder" data-name="Iconly/Bulk/Folder" width="24" height="24" viewBox="0 0 24 24">
                    </div>
                    <div class="txt__tile">Dashboard</div>
                </a>
            </div>
            <div class="col-4 item_link">
                <a href="/admin-consultarNoticias" class="btn btn_navLink">
                    <div class="icon_current">
                        <img src="/assets/svg/news.svg" id="Iconly_Two-tone_Location" data-name="Iconly/Two-tone/Location" width="24" height="24" viewBox="0 0 24 24">
                    </div>
                    <div class="icon_active">
                        <img src="/assets/svg/news-active.svg" id="Iconly_Bulk_Location" data-name="Iconly/Bulk/Location" width="24" height="24" viewBox="0 0 24 24">

                    </div>
                    <div class="txt__tile">Noticias</div>
                </a>
            </div>
        </div>
    </footer>

    <!-- jquery -->
    <script src="assets/js/jquery-3.6.0.js"></script>
    <!-- popper.min.js 1.16.1 -->
    <script src="assets/js/popper.min.js"></script>
    <!-- bootstrap.js v4.6.0 -->
    <script src="assets/js/bootstrap.min.js"></script>

    <!-- Owl Carousel v2.3.4 -->
    <script src="assets/js/vendor/owl.carousel.min.js"></script>
    <!-- Swiper 6.4.11 -->
    <script src="assets/js/vendor/swiper-bundle.min.js"></script>
    <!-- sharer 0.4.0 -->
    <script src="assets/js/vendor/sharer.js"></script>
    <!-- short-and-sweet v1.0.2 - Accessible character counter for input elements -->
    <script src="assets/js/vendor/short-and-sweet.min.js"></script>
    <!-- jquery knob -->
    <script src="assets/js/vendor/jquery.knob.min.js"></script>
    <!-- main.js -->
    <script src="assets/js/main.js" defer></script>
    <!-- PWA app service registration and works js -->
    <script src="assets/js/pwa-services.js"></script>
</body>
</html>