<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/mastersyle.css">
    <link rel="stylesheet" href="../css/productos.css">
    <link rel="shortcut icon" href="../assets/svg/logo.svg">
    <script src="../js/validaciones.js"></script>
    <title>Lista <%=name%> | SuperBear</title>
</head>
<body>
    <%- include('partials/navegacionNormal') %>
    <div class="principal">
        <header>
            <div>
                <a href="/consultarlistas/<%=grupo%>"><img src="../assets/svg/flecha.svg"></a>
            </div>
            <h1><%=name%></h1>
            <div>
                <a href="/CrearProducto/<%=idLista%>"><img src="../assets/svg/plus.svg"></a>
            </div>
        </header>
    </div>
    <% if( productos[0] == undefined ){%>
        <div class="principal">
            <h1>Aun no hay productos en esta lista</h1>
        </div>
        <%}else{%>
    <form class="grid">
        <% productos.forEach(element => { %>
        <div class="contenedor-producto">
            <!-- Cada conjunto de label y checkbox debe tener su propio id -->
            <%if(element.id_esProd == 1){%>
            <input id="producto<%= element.id_pro %>" type="checkbox" onclick="miFunc(<%= element.id_pro%>,<%=element.id_eli %>)">
            <%}else{%>
            <input checked id="producto<%= element.id_pro %>" type="checkbox" onclick="miFunc(<%= element.id_pro%>,<%=element.id_eli %>)">
            <%}%>
            
            <label for="producto<%= element.id_pro %>">
                <p class="caja">&nbsp</p>
            </label>
            <div class="producto">
                <div class="header-producto">
                    <div class="nombre-producto">
                        <a href="/editarProductoDeLista/<%= element.id_pro %>/<%= element.id_eli %>">
                            <h2>
                                <%=element.nom_pro %>
                            </h2>
                        </a>
                    </div>
                    <a href="/borrarProductoLista/<%= element.id_pro %>/<%= element.id_eli %>">
                        <img src="../assets/svg/basura.svg">
                    </a>
                </div>
                <div class="contenido-producto">
                    <div class="texto-producto">
                        <b class="linea">
                            <%=element.can_pro%> <%=element.id_uni%>
                        </b>
                        <%if(element.precio_pro != null){%>
                        <b class="linea">
                            $ <%=element.precio_pro%>
                        </b>
                        <%}%>
                        <%if(element.id_mar != null){%>
                        <b class="linea">
                            <%=element.id_mar %>
                        </b>
                        <%}%>
                        <%if(element.id_sup != null){%>
                        <b class="linea">
                            <%=element.id_sup %>
                        </b>
                        <%}%>
                        <%if(element.id_dep != null){%>
                        <b class="linea">
                            <%=element.id_dep %>
                        </b>
                        <%}%>
                    </div>
                    <%if(element.notas_pro != null){%>
                    <div class="notas-producto">
                        <%=element.notas_pro %>
                    </div>
                    <%}%>
                </div>
            </div>
        </div>
        <% });%>
        <%}%>
    </form>
    <br>
    <footer>
        <%- include('partials/footer') %>
    </footer>
    <script src="../js/detect-browser.js"></script>
    <script src="../js/barraNavegacion.js"></script>
</body>
</html>