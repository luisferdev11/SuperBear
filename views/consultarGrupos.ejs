    <!--Cada grupo debe tener su propio menu
    para eso es necesario que cada input tenga un id diferentes
    los for del label deben coincidir con el del input-->
        <% if (user.grps.length > 0) { %>
            <div class="grid">
            <% for (let i=0; i < user.grps.length; i++ ) { %>
                <div class="emPage__blog">
                    <div class="item__card layer-lg">
                        <a href="/consultarlistas/<%=user.grps[i].id_grp %>" class="">
                            <div class="cover_img">
                                <img src="https://random.imagecdn.app/500/<%=100+i%>">
                            </div>
                        </a>
                            <div class="card__body">
                                <% if (user.grps[i].id_priv==1) { %>
                                    <span>Eres admin de este grupo</span>
                                <% }else{ %>
                                    <span>Eres parte de este grupo</span>
                                <% } %>
                                <a href="/consultarlistas/<%=user.grps[i].id_grp %>" class="">
                                    <h2 class="card_title"><%= user.grps[i].nom_grp %></h2>
                                </a>
                                <% if (user.grps[i].id_priv==1) { %>
                                    <a href="/consultarmiembros/<%=user.grps[i].id_grp %>">
                                        <p>
                                            Consulta, comparte y agrega miembros aquí!
                                        </p>
                                    </a>
                                <% }else{ %>
                                    <a href="/miembrosdegrupo/<%=user.grps[i].id_grp%>">
                                        <p>
                                            Consulta con quénes estás realizando tus compras aquí!
                                        </p>
                                    </a>
                                <% } %>
                            </div>
                        
                    </div>
                </div>
            </div>   
            <% } %>
        <% } else{ %>
            <h3>
                Parece que aún no estás en ningún grupo. ¡Crea un grupo o ingresa a alguno ya existente y comienza a gestionar tus compras con SuperBear!
            </h3>
        <% } %>              
